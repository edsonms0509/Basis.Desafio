{
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md.
            "name": "WebApi (BackEnd)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Basis.CadastroLivros.Api/bin/Debug/net8.0/Basis.CadastroLivros.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Basis.CadastroLivros.Api",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7281"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "BlazorWebAssembly (FrontEnd)",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/Basis.CadastroLivros.Web",
            "browser": "edge"
        },
    ],
        "compounds": [
        {
            "name": "Both: BackEnd/FrontEnd",
            "configurations": ["WebApi (BackEnd)", "BlazorWebAssembly (FrontEnd)"]
        }
    ]
}